---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const latestPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, 3);
---

<Layout title="Spencer's Blog">
	<h1 class = "welcome">Welcome!</h1>
	<p class="intro">
		I'm Spencer, just another guy who's interested in AI, society, and geopolitics. It's great to have you in my little corner of the internet. 
	</p>
	<p class="intro">
		You can learn more about me on my main website, <a href="https://spencermichaels.ai">spencermichaels.ai</a>. Or you can stalk me on <a href="https://www.linkedin.com/in/spencermichaels/">LinkedIn</a> or <a href="https://github.com/afk-procrastinator">GitHub</a>. <sub>I won't judge.</sub></p>
	</p>

	<section class="latest-posts">
		<h2>Latest Posts</h2>
		<div class="post-grid">
			{latestPosts.map(post => (
				<article class="post-card">
					<h3>{post.data.title}</h3>
					<time datetime={post.data.pubDate.toISOString()}>
						{post.data.pubDate.toLocaleDateString('en-US', {
							year: 'numeric',
							month: 'long',
							day: 'numeric'
						})}
					</time>
					<p>{post.data.description}</p>
					<a href={`/blog/${post.slug}`} class="read-more">Read more â†’</a>
				</article>
			))}
		</div>
	</section>
</Layout>

<style>
	.welcome {
		color: var(--maroon);
	}
	.intro {
		font-size: 1.2rem;
		color: var(--subtext1);
		margin: 0.5rem 0;
	}
	.latest-posts {
		margin-top: 3rem;
	}
	.post-grid {
		display: grid;
		gap: 2rem;
		margin-top: 2rem;
	}
	.post-card {
		background: var(--surface0);
		padding: 1.5rem;
		border-radius: 8px;
		transition: transform 0.2s;
	}
	.post-card:hover {
		transform: translateY(-2px);
	}
	.post-card h3 {
		margin: 0;
		color: var(--text);
	}
	.post-card time {
		display: block;
		color: var(--subtext0);
		font-size: 0.9rem;
		margin: 0.5rem 0;
	}
	.post-card p {
		color: var(--subtext1);
		margin: 1rem 0;
	}
	.read-more {
		color: var(--blue);
		text-decoration: none;
		font-weight: 500;
	}
	.read-more:hover {
		text-decoration: underline;
	}
		/* Style links */
	a {
		color: var(--mauve);
		text-decoration: none;
		border-bottom: 1px solid transparent;
		transition: border-color 0.2s, color 0.2s;
	}

	a:hover {
		color: var(--pink);
		border-bottom-color: var(--pink);
	}
</style>
