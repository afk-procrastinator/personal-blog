---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Spencer Michaels' Blog" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/public/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<script>
			// Check for saved theme preference
			const theme = localStorage.getItem('theme') || 'dark';
			document.documentElement.classList.toggle('light', theme === 'light');

			// Theme toggle functionality
			document.addEventListener('DOMContentLoaded', () => {
				const themeToggle = document.querySelector('.theme-toggle');
				themeToggle?.addEventListener('click', () => {
					const isDark = !document.documentElement.classList.toggle('light');
					localStorage.setItem('theme', isDark ? 'dark' : 'light');
				});
			});
		</script>
	</head>
	<body>
		<nav>
			<div class="nav-content">
				<a href="/" class="site-title">
					<span class="site-title-dot"></span>
					Spencer Michaels' Blog
				</a>
				<div class="nav-links">
					<a href="https://spencermichaels.ai">About Me</a>
					<span> | </span>
					<a href="https://www.spencermichaels.ai/bookshelf">What I'm Reading</a>
					<span> | </span>
					<div class="social-icons">
						<a href="https://github.com/afk-procrastinator" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
							<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>
							</svg>
						</a>
						<a href="https://linkedin.com/in/spencer-michaels" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
							<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
								<rect x="2" y="9" width="4" height="12"/>
								<circle cx="4" cy="4" r="2"/>
							</svg>
						</a>
					</div>
					<span> | </span>
					<button class="theme-toggle" aria-label="Toggle dark mode">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<circle cx="12" cy="12" r="5"/>
							<line x1="12" y1="1" x2="12" y2="3"/>
							<line x1="12" y1="21" x2="12" y2="23"/>
							<line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
							<line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
							<line x1="1" y1="12" x2="3" y2="12"/>
							<line x1="21" y1="12" x2="23" y2="12"/>
							<line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
							<line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
						</svg>
					</button>
				</div>
			</div>
		</nav>
		<main>
			<slot />
		</main>
		<footer>
			<div class="footer-content">
				<p>Made with ❤️ by Spencer Michaels</p>
				<p>Built with <a href="https://astro.build">Astro</a>, hosted on <a href="https://vercel.com">Vercel</a></p>
				<p>See my source code <a href="https://github.com/afk-procrastinator/personal-blog">here</a></p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		/* Catppuccin Mocha Theme Colors */
		--rosewater: #f5e0dc;
		--flamingo: #f2cdcd;
		--pink: #f5c2e7;
		--mauve: #cba6f7;
		--red: #f38ba8;
		--maroon: #eba0ac;
		--peach: #fab387;
		--yellow: #f9e2af;
		--green: #a6e3a1;
		--teal: #94e2d5;
		--sky: #89dceb;
		--sapphire: #74c7ec;
		--blue: #89b4fa;
		--lavender: #b4befe;
		--text: #cdd6f4;
		--subtext1: #bac2de;
		--subtext0: #a6adc8;
		--overlay2: #9399b2;
		--overlay1: #7f849c;
		--overlay0: #6c7086;
		--surface2: #585b70;
		--surface1: #45475a;
		--surface0: #313244;
		--base: #1e1e2e;
		--mantle: #181825;
		--crust: #11111b;
	}

	/* Light theme colors */
	:root.light {
		--text: #4c4f69;
		--subtext1: #5c5f77;
		--subtext0: #6c6f85;
		--overlay2: #7c7f93;
		--overlay1: #8c8fa1;
		--overlay0: #9ca0b0;
		--surface2: #acb0be;
		--surface1: #bcc0cc;
		--surface0: #ccd0da;
		--base: #eff1f5;
		--mantle: #e6e9ef;
		--crust: #dce0e8;
	}

	html {
		font-family: 'Inter', system-ui, sans-serif;
		background: var(--base);
		color: var(--text);
		scroll-behavior: smooth;
		line-height: 1.6;
	}

	body {
		margin: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	main {
		flex: 1;
		width: 60%;
		max-width: 1000px;
		margin: 0 auto;
		padding: 3rem 0;
		box-sizing: border-box;
	}

	h1 {
		font-size: 2.5rem;
		font-weight: 700;
		margin: 0 0 1.5rem 0;
		color: var(--text);
		line-height: 1.2;
	}

	nav {
		background: var(--mantle);
		padding: 1rem 0;
		position: sticky;
		top: 0;
		z-index: 100;
		border-bottom: 1px solid var(--surface0);
		backdrop-filter: blur(10px);
	}

	.nav-content {
		width: 70%;
		max-width: 1400px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.site-title {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 1.1rem;
		font-weight: 600;
		color: var(--text);
		text-decoration: none;
		letter-spacing: -0.01em;
	}

	.site-title-dot {
		width: 6px;
		height: 6px;
		background: var(--mauve);
		border-radius: 50%;
	}

	.nav-links {
		display: flex;
		gap: 1.25rem;
		align-items: center;
	}

	.nav-links a {
		color: var(--subtext1);
		text-decoration: none;
		font-weight: 500;
		font-size: 0.95rem;
		transition: color 0.2s;
	}

	.nav-links a:hover {
		color: var(--text);
	}

	.social-icons {
		display: flex;
		gap: 0.75rem;
		align-items: center;
		margin-left: 0.5rem;
	}

	.social-icons a {
		color: var(--subtext1);
		transition: color 0.2s;
		display: flex;
		align-items: center;
		padding: 0.25rem;
	}

	.social-icons a:hover {
		color: var(--text);
	}

	.theme-toggle {
		background: none;
		border: none;
		padding: 0.25rem;
		margin-left: 0.5rem;
		color: var(--subtext1);
		cursor: pointer;
		transition: color 0.2s;
		display: flex;
		align-items: center;
	}

	.theme-toggle:hover {
		color: var(--text);
	}

	footer {
		background: var(--mantle);
		padding: 1.5rem;
		margin-top: 4rem;
		border-top: 1px solid var(--surface0);
		font-size: 0.9rem;
	}

	.footer-content {
		width: 80%;
		max-width: 1400px;
		margin: 0 auto;
		display: flex;
		justify-content: center;
		gap: 2rem;
		color: var(--subtext1);
	}

	.footer-content p {
		margin: 0;
		width: 25%;
		text-align: center;
	}

	.footer-content a {
		color: var(--mauve);
		text-decoration: none;
		font-weight: 500;
		font-size: 0.95rem;
		transition: color 0.2s;
	}

	.footer-content a:hover {
		color: var(--text);
		text-decoration: underline;
	}

	.content :global(li) {
		margin: 0.5rem 0;
	}

	/* Add styling for blog post images */
	.content :global(img) {
		max-width: 20rem;
		width: 100%;
		height: auto;
		max-height: 200px;
		object-fit: cover;
		border-radius: 0.5rem;
		margin: 1rem auto;
		display: block;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
	}

	@media (max-width: 768px) {
		.nav-content {
			width: 90%;
			padding: 0;
		}

		.nav-links {
			gap: 1rem;
		}

		.nav-links a {
			font-size: 0.9rem;
		}

		main {
			width: 90%;
			padding: 2rem 0;
		}

		h1 {
			font-size: 2rem;
		}

		.social-icons {
			margin-left: 0.25rem;
		}

		.footer-content {
			width: 90%;
		}
	}

	@media (max-width: 480px) {
		.nav-content {
			flex-direction: column;
			gap: 0.75rem;
		}

		.nav-links {
			justify-content: center;
			flex-wrap: wrap;
		}

		.footer-content {
			flex-direction: column;
			align-items: center;
			gap: 0.5rem;
		}
	}
</style>